{
  "$schema": "..\\..\\..\\node_modules\\nx\\schemas\\project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/picsa-apps/extension-app-native",
  "prefix": "picsa",
  "implicitDependencies": ["picsa-apps-extension-app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx cap sync",
        "cwd": "apps/picsa-apps/extension-app-native"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "description": "Serve extension app in external mode to connect. NOTE - need to update capacitor.config.ts before build",
      "dependsOn": ["build"],
      "options": {
        "commands": [
          "nx run picsa-apps-extension-app:serve --configuration=external"
        ]
      }
    },
    "resources": {
      "executor": "nx:run-commands",
      "description": "Populate splash and icon from resources files. NOTE - may have to run manually from directory",
      "options": {
        "command": "npx cordova-res android --skip-config --copy"
      },
      "cwd": "apps/picsa-apps/extension-app-native"
    },
    "jetify": {
      "inputs": ["yarn.lock"],
      "executor": "nx:run-commands",
      "description": "(currently run as postinstall). TODO - clarify when required (https://stackoverflow.com/questions/40746144/error-with-duplicated-fileprovider-in-manifest-xml-with-cordova/41550634#41550634)",
      "outputs": [],
      "options": {
        "command": "yarn jetify"
      }
    },
    "open": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx cap open android",
        "cwd": "apps/picsa-apps/extension-app-native"
      }
    },
    "cap": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx cap",
        "cwd": "apps/picsa-apps/extension-app-native"
      }
    }
  },
  "tags": []
}
