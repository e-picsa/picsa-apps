{
  "projects": {
    "budget-tool": {
      "architect": {
        "build": {
          "builder": "",
          "options": {
            "assets": [
              {
                "glob": "**/*",
                "input": "./libs/shared-assets",
                "output": "./assets"
              }
            ]
          },
          "configurations": {
            "staging": {
              "fileReplacements": [
                {
                  "replace": "libs/environments/environment.ts",
                  "with": "libs/environments/environment.staging.ts"
                },
                {
                  "replace": "libs/environments/firebase/config.ts",
                  "with": "libs/environments/firebase/config.prod.ts"
                }
              ],
              "sourceMap": true
            }
          }
        }
      }
    },
    "dashboard": {
      "sourceRoot": "apps/dashboard/src",
      "architect": {
        "build": {
          "options": {
            "stylePreprocessorOptions": {
              "includePaths": ["libs/scss/"]
            }
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "libs/environments/environment.ts",
                  "with": "libs/environments/builds/environment.prod.ts"
                }
              ]
            }
          }
        }
      }
    },
    "extension-toolkit": {
      "sourceRoot": "apps/extension-toolkit/src",
      "architect": {
        "build": {
          "options": {
            "assets": [
              {
                "glob": "**/*",
                "input": "./libs/shared-assets/",
                "output": "./assets"
              },
              {
                "glob": "**/*",
                "input": "./apps/budget-tool/src/assets",
                "output": "./assets"
              },
              {
                "glob": "**/*",
                "input": "./apps/climate-tool/src/assets",
                "output": "./assets"
              }
            ],
            "styles": [
              "apps/budget-tool/src/styles.scss",
              "apps/climate-tool/src/styles.scss",
              "./node_modules/leaflet/dist/leaflet.css"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "libs/environments/environment.ts",
                  "with": "libs/environments/builds/environment.prod.ts"
                }
              ],
              "sourceMap": true
            },
            "staging": {
              "fileReplacements": [
                {
                  "replace": "libs/environments/environment.ts",
                  "with": "libs/environments/environment.staging.ts"
                }
              ],
              "sourceMap": true
            },
            "mw": {
              "fileReplacements": [
                {
                  "replace": "libs/environments/environment.ts",
                  "with": "libs/environments/environment.mw.ts"
                }
              ],
              "sourceMap": true
            },
            "dev": {
              "sourceMap": true
            }
          }
        },
        "ionic-cordova-build": {
          "configurations": {
            "mw": {
              "browserTarget": "extension-toolkit:build:mw"
            }
          }
        }
      }
    },
    "climate-tool": {
      "sourceRoot": "apps/climate-tool/src",
      "architect": {
        "build": {
          "options": {
            "assets": [
              {
                "glob": "**/*",
                "input": "./libs/shared-assets/",
                "output": "./assets"
              }
            ],
            "styles": ["./node_modules/leaflet/dist/leaflet.css"]
          },
          "configurations": {
            "staging": {
              "fileReplacements": [
                {
                  "replace": "libs/environments/environment.ts",
                  "with": "libs/environments/environment.staging.ts"
                }
              ],
              "sourceMap": true
            },
            "mw": {
              "fileReplacements": [
                {
                  "replace": "libs/environments/environment.ts",
                  "with": "libs/environments/environment.mw.ts"
                }
              ]
            }
          }
        }
      }
    }
  }
}
